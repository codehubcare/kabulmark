{
  "name": "kabulmark",
  "version": "1.1.0",
  "description": "A React-based rich text editor built as a wrapper over Meta's Lexical library.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:css && tsc",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "dev": "concurrently \"tsc --watch\" \"tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch\"",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "react",
    "editor",
    "rich-text-editor",
    "wysiwyg",
    "lexical",
    "text-formatting",
    "markdown",
    "html-editor",
    "content-editor",
    "kabulmark",
    "javascript",
    "typescript",
    "ui-component"
  ],
  "author": "Shamshad Zaheer",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@lexical/react": "^0.33.1",
    "lexical": "^0.33.1",
    "lucide-react": "^0.525.0"
  }
}
